<%- include("../partials/header") %>
<div class="container">
	<div class="row">
<h1 style="text-align:center;">
	Edit <%=campground.name%> 
</h1>
		<div style="width: 30%; margin: 25px auto;">
			
<form action="/camp/<%=campground._id%>?_method=PUT" method="POST">
	<div class="form-group">
		<input class="form-control" type="text" name="campground[name]" value ="<%=campground.name%>" placeholder="Campground Name">
		</div>
	<div class="form-group">
		<input class="form-control" type="number" name="campground[price]" value ="<%=campground.price%>" placeholder="Campground Price" min="10" step="10">
		</div>
	<div class="form-group">
	<input class="form-control" type="text" name="campground[image]" value ="<%=campground.image%>" placeholder="Image URL">
		</div>
	<div class="form-group">
                    <input class="form-control" type="text" value ="<%=campground.description%>" name="campground[description]" placeholder="description">
                </div>
	<div class="form-group">
	<button class="btn btn-lg btn-primary btn-block"> Submit</button>
		</div>
	
</form>
			<a href="/camp" class="btn btn-outline-primary" >Back</a>
		</div>
	</div>
</div>
	
<%- include("../partials/footer") %>